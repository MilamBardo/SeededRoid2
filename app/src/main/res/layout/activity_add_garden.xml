<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.talanath.seededroid2.AddGardenActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/editGardenName"
        android:layout_width="290dp"
        android:layout_height="0dp"
        android:layout_marginBottom="303dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:hint="Garden Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/fabSaveGarden"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editGardenTags"
        android:layout_width="298dp"
        android:layout_height="84dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Enter the tags you wish to to collect"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editGardenName" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editGardenTags"
        app:layout_constraintTop_toTopOf="@+id/editGardenTags"
        app:srcCompat="@drawable/garden_tag" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabSaveGarden"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="34dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/save_button" />

</android.support.constraint.ConstraintLayout>
