<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.talanath.seededroid2.TreePlayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layTreeScene"
        android:orientation="vertical"
        android:background="#000000"
        >


        <ImageView
            android:id="@+id/imgDisplay"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            />

        <TextView
            android:id="@+id/txtSubtitles"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Hiren Patel is a massive person who weighs about 8000 pounds and it strong like hercules.  He eats, many, MANY eggs for breakfast every day"
            android:typeface="sans"
            android:textSize="80px"

            android:textColor="#FFFFFF"
            >
        </TextView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
